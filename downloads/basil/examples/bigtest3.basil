SELECT CASE x
  CASE IS < 0      : PRINTLN "negative";
  CASE 0 TO 1.5    : PRINTLN "tiny";
  CASE 1.5 TO 9.9  : PRINTLN "smallish";
  CASE IS >= 10    : PRINTLN "double digits";
END SELECT



